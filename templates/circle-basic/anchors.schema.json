    "HOOK:AFTER_BUILD":{"type":"hook"},
    "HOOK:PRE_INJECT":{"type":"hook"},
    "HOOK:POST_INJECT":{"type":"hook"},
    "HOOK:PRE_COMMIT":{"type":"hook"},
    "HOOK:AFTER_INSTALL":{"type":"hook"}
