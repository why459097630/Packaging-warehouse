<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ndjc.app">

    <!-- 运行/存储/通知等权限（生成器注入） -->
    <!-- NDJC:PERMISSIONS -->
    <!-- NDJC:BLOCK:PERMISSIONS -->

    <application
        android:name=".App"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:localeConfig="@xml/locale_config">  <!-- NDJC:LOCALE_CONFIG -->

        <!-- 应用图标/启动图标占位 -->
        <!-- NDJC:APP_ICON -->
        <!-- NDJC:SPLASH_ICON -->

        <!-- 网络安全 xml（若启用可指向 @xml/network_security_config） -->
        <!-- NDJC:NETWORK_SECURITY_XML -->
        <!-- NDJC:BLOCK:NETWORK_SECURITY -->

        <!-- 前台服务类型（如 location/media 等） -->
        <!-- NDJC:FOREGROUND_SERVICE_TYPES -->
        <!-- NDJC:BLOCK:FOREGROUND_SERVICE_TYPES -->

        <!-- FileProvider / Shortcuts / Widget 占位 -->
        <!-- NDJC:BLOCK:FILE_PROVIDER -->
        <!-- NDJC:BLOCK:SHORTCUTS -->
        <!-- NDJC:BLOCK:WIDGET -->

        <!-- 频道/环境 meta-data（依靠 manifestPlaceholders） -->
        <!-- NDJC:META_CHANNEL --><meta-data android:name="ndjc.meta.CHANNEL" android:value="${META_CHANNEL}" />
        <!-- NDJC:META_ENV     --><meta-data android:name="ndjc.meta.ENV"      android:value="${META_ENV}" />

        <!-- Maps 自定义样式（如使用，可在此注入） -->
        <!-- NDJC:MAPS_STYLE_JSON -->

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <!-- NDJC:MAIN_ACTIVITY_NAME -->

            <!-- 入口 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- 额外 IntentFilter / Deeplinks / App Links -->
            <!-- NDJC:INTENT_FILTERS -->
            <!-- NDJC:BLOCK:INTENT_FILTERS -->

            <!-- 深链 -->
            <!-- NDJC:DEEP_LINK_PATHS -->
            <!-- NDJC:BLOCK:DEEPLINK -->
            <!-- NDJC:BLOCK:APP_LINKS -->
        </activity>

        <!-- 开机/通知等接收器（生成器注入处） -->
        <!-- NDJC:BLOCK:BOOT_RECEIVER -->
        <!-- NDJC:BLOCK:NOTIFICATION_RECEIVER -->

    </application>
</manifest>
