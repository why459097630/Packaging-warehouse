<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 权限/隐私 预留区（必要时启用） -->
    <!-- NDJC:PERMISSIONS -->
    <!-- NDJC:BLOCK:PERMISSIONS -->

    <application
        android:name=".App"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/Theme.NDJCCore">

        <!-- 语言/区域 设置（生成器会把此锚点替换成 android:localeConfig 或等价 meta-data） -->
        <!-- NDJC:LOCALE_CONFIG -->
        <!-- NDJC:BLOCK:LOCALE_CONFIG -->

        <!-- 图标/启动图（生成器占位） -->
        <!-- NDJC:APP_ICON -->
        <!-- NDJC:SPLASH_ICON -->

        <!-- 网络安全 xml（可选，使用 network_security_config） -->
        <!-- NDJC:NETWORK_SECURITY_XML -->
        <!-- NDJC:BLOCK:NETWORK_SECURITY -->

        <!-- 前台服务 / service types（可选） -->
        <!-- NDJC:FOREGROUND_SERVICE_TYPES -->
        <!-- NDJC:BLOCK:FOREGROUND_SERVICE_TYPES -->

        <!-- FileProvider / Shortcuts / Widget 预留 -->
        <!-- NDJC:FILE_PROVIDER -->
        <!-- NDJC:BLOCK:SHORTCUTS -->
        <!-- NDJC:BLOCK:WIDGET -->

        <!-- 广告/统计 meta-data（支持 manifestPlaceholders） -->
        <!-- NDJC:META_CHANNEL --><meta-data android:name="ndjc.meta.CHANNEL" android:value="${META_CHANNEL}" />
        <!-- NDJC:META_ENV    --><meta-data android:name="ndjc.meta.ENV"     android:value="${META_ENV}" />

        <!-- Maps 样式（可选） -->
        <!-- NDJC:MAPS_STYLE_JSON -->

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <!-- NDJC:MAIN_ACTIVITY_NAME -->
            <intent-filter>
                <!-- 入口 -->
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- 深链 IntentFilters / App Links -->
            <!-- NDJC:INTENT_FILTERS -->
            <!-- NDJC:BLOCK:INTENT_FILTERS -->

            <!-- DeepLink 路径 / App Links 规则 -->
            <!-- NDJC:DEEP_LINK_PATHS -->
            <!-- NDJC:BLOCK:APP_LINKS -->
        </activity>

        <!-- 推送/通知 接收器（按需启用） -->
        <!-- NDJC:BLOCK:RECEIVER -->
        <!-- NDJC:BLOCK:NOTIFICATION_RECEIVER -->
    </application>
</manifest>
