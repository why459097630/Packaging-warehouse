<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- NDJC:BLOCK:LAYOUT_ACTIVITY_MAIN -->

    <!-- 标题：使用 strings.xml 的 ndjc_home_title -->
    <TextView
        android:id="@+id/ndjcTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ndjc_home_title"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingBottom="12dp" />

    <!-- 正文/副标题：示例沿用一个 key（可按需换成另一个 key） -->
    <TextView
        android:id="@+id/ndjcBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ndjc_home_title"
        android:textSize="16sp"
        android:paddingBottom="16dp" />

    <!-- 主按钮：使用 strings.xml 的 ndjc_action_primary_text -->
    <Button
        android:id="@+id/ndjcPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ndjc_action_primary_text" />

    <!-- 其他可注入区域（生成器可在这里追加布局块） -->
    <!-- NDJC:BLOCK:LAYOUT_EXTRA -->
    <!-- NDJC:BLOCK:RES_XML -->
</LinearLayout>
