<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- 标题：使用 ndjc_home_title（锚点由生成器替换） -->
    <TextView
        android:id="@+id/ndjcTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ndjc_home_title"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingBottom="12dp" />

    <!-- 正文或副标题：这里沿用同一个 key（也可按需改成另一个 key） -->
    <TextView
        android:id="@+id/ndjcBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ndjc_home_title"
        android:textSize="16sp"
        android:paddingBottom="16dp" />

    <!-- 主按钮：使用 ndjc_action_primary_text（锚点由生成器替换） -->
    <Button
        android:id="@+id/ndjcPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ndjc_action_primary_text" />

    <!-- 下面这两个占位 View 仅为保留布局位置，可按需删除 -->
    <View
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <View
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
</LinearLayout>
