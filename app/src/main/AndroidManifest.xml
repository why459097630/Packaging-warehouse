<?xml version="1.0" encoding="utf-8"?>
<!--
  说明：
  - Android 8+ 的 AGP 会以 Gradle 的 android { namespace = "<pkg>" } 作为 R 的包名。
  - 但这里仍然保留 manifest 的 package 属性，便于 NDJC 物化阶段用 com.example.dtxc 同步/校验。
  - 注释样式保持 IF / LIST / BLOCK / HOOK / NDJC:... 以配合物化脚本匹配。
-->

<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dtxc">

    <!-- ===== PERMISSIONS（条件插入） ===== -->

    <!-- IF:PERMISSION.CAMERA -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- END_IF -->

    <!-- IF:PERMISSION.MEDIA -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <!-- END_IF -->

    <!-- IF:PERMISSION.NOTIFICATION -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- END_IF -->

    <!-- IF:PERMISSION.LOCATION -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- END_IF -->

    <!-- IF:PERMISSION.CONTACTS -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- END_IF -->

    <!-- IF:PERMISSION.SCHEDULE_EXACT_ALARM -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <!-- END_IF -->

    <!-- IF:PERMISSION.CLIPBOARD -->
    <uses-permission android:name="android.permission.READ_CLIPBOARD_IN_BACKGROUND" />
    <!-- END_IF -->

    <!-- ===== Application ===== -->
    <application
        android:name=".App"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/NDJCTheme">

        <!-- IF:NETWORK_CLEAR_TEXT -->
        <!-- 说明：如需 HTTP，可在 res/xml/network_security_config.xml 设置明文域名
             同时这里通过 meta-data 打开 usesCleartextTraffic 或由代码读取 -->
        <meta-data android:name="ndjc.placeholder" android:value="true"/>
        <!-- END_IF -->

        <!-- BLOCK:SPLASH_CONTENT -->
欢迎使用德州餐厅
<!-- END_BLOCK -->

        <!-- IF:FILE_PROVIDER -->
        <!-- HOOK FILE_PROVIDER -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        <!-- END_IF -->

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LIST:DEEPLINK_PATTERNS -->
        <!-- 例：<intent-filter>...<data android:scheme="${ITEM}"/></intent-filter>（如需可在对应 Activity 上展开） -->
        <!-- END_LIST -->

        <!-- HOOK INTENT_SHARE -->
        <!-- 如需分享代理，可由物化在此处或单独 Activity 注入 -->
        <!-- 示例： -->
        <!--
        <activity
            android:name=".ShareProxyActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        -->

    </application>
</manifest>
