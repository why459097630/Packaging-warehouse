<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.ndjc.app"  xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- ↑ com.ndjc.demo.core -->

    <!-- ===== Permissions (条件锚点) ===== -->

    <uses-permission android:name="android.permission.CAMERA"/>
    <!-- ENDIF -->

    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <!-- ENDIF -->

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- ENDIF -->

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <!-- ENDIF -->

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <!-- ENDIF -->

    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM"/>
    <!-- ENDIF -->

    <!-- ===== Application ===== -->
    <!-- 说明：仅允许存在一个 <application android:label="NDJC core">。以下为统一应用段。
         如需开启明文网络 (IF:NETWORK.CLEAR_TEXT)，请在生成器注入时把
         android:usesCleartextTraffic="true" 与
         android:networkSecurityConfig="@xml/network_security_config"
         两个属性追加到下面这个 <application> 的起始标签上。 -->

    <application
        android:name=".App"                 <!-- 建议：自定义 Application；如未使用可删除此行 -->
        android:allowBackup="true"
        android:label="@string/app_name"    <!-- NDJC core -->
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/NDJCTheme">

        <!-- 可注入 Splash 配置或占位 Activity/Theme 片段 -->
        <!-- END_BLOCK -->

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>
        <!-- ENDIF -->

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>

            </intent-filter>
        </activity>

        <activity
            android:name=".ShareProxyActivity"
            android:exported="true" />
        <!-- ENDIF -->

    </application>
</manifest>
