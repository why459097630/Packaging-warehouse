<?xml version="1.0" encoding="utf-8"?>
<!-- 注意：包名/命名空间请在 Gradle 的 android { namespace = "…" } 中配置，这里不要再写 package 属性 -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ===== Permissions（条件锚点）===== -->

    <!-- IF:PERMISSION_CAMERA -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- END_IF -->

    <!-- IF:PERMISSION_MEDIA -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <!-- END_IF -->

    <!-- IF:PERMISSION_NOTIFICATION -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- END_IF -->

    <!-- IF:PERMISSION_LOCATION -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- END_IF -->

    <!-- IF:PERMISSION_CONTACTS -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- END_IF -->

    <!-- IF:PERMISSION_SCHEDULE_EXACT_ALARM -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <!-- END_IF -->

    <!-- ===== Application ===== -->
    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/NDJCTheme">

        <!-- BLOCK:SPLASH_CONTENT -->
        <!-- 可注入 Splash 占位 Activity/Theme 片段 -->
        <!-- END_BLOCK -->

        <!-- IF:FILE_PROVIDER -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        <!-- END_IF -->

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <!-- LIST:DEEPLINK_PATTERNS（如需） -->
            </intent-filter>
        </activity>

        <!-- IF:INTENT_SHARE -->
        <activity
            android:name=".ShareProxyActivity"
            android:exported="true" />
        <!-- END_IF -->

    </application>
</manifest>
